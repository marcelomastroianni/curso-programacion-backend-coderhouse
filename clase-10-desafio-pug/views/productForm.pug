html
    head 
        title='Mi primera plantilla pug js'
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css')
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit-cover")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        script(src="./client_validations.js")
    body
        div(style="background-color:white;padding:20px")
            div(style="background-color:LightGray;padding:20px;height: 600px;")
                form(action="/api/productos" name="product_form" onsubmit="return validateForm()" method="POST")
                    div(class="m-4")
                        div(class="container text-left")
                            div(class="row")
                                div(class="col-12")
                                    h1(style="color:blue") Ingrese Producto
                            div(class="row")
                                div(class="col-12")
                                    label(for="title" class="form-label") Nombre
                            div(class="row")
                                div(class="col-12")
                                    input(type="text" class="form-control" name="title" id="title")
                            div(class="row")
                                div(class="col-12")
                                        label(for="price" class="form-label") Precio
                            div(class="row")
                                div(class="col-12")
                                    input(type="number" class="form-control"  name="price" id="price")
                            div(class="row")
                                div(class="col-12")
                                    label(for="thumbnail" class="form-label") Foto Url
                            div(class="row")
                                div(class="col-12")
                                    input(type="text" class="form-control" name="thumbnail" id="thumbnail")
                            div(class="row")
                                div(class="col-12")
                                    br
                                    button(type="submit" class="btn btn-success" style="margin-right:10px") Enviar
                                    a(href="/productos" class="btn btn-success " role="button") Volver
                        br