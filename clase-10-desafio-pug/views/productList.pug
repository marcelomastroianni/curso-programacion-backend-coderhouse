html
    head 
        title='Mi primera plantilla pug js'
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css')
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit-cover")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
    body
        div(style="background-color:white;padding:20px")
            div(style="background-color:LightGray;padding:20px;height: 600px;")
                br
                a(href='/alta-producto' class='btn btn-success' style='float: right;') Alta producto
                br
                h1(style='color:blue') Vista de productos
                br
                if products.length
                    div(style="background-color:LightYellow;padding:20px;color:black")
                        table(class="table" style="background-color:DimGray;padding:20px;color:white")
                            thead
                                tr
                                    th(scope="col") Nombre
                                    th(scope="col") Precio
                                    th(scope="col") Foto
                            tbody
                                each prod in products
                                    tr
                                        td=prod.title
                                        td=prod.price
                                        td
                                            img(src=prod.thumbnail style="width: 80px")
                else
                    div(style="background-color:LightYellow;padding:20px;color:black")
                        h2 No se encontraron productos

